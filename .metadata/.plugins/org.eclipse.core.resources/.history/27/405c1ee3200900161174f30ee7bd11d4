package star.objectoriented;

import java.util.Arrays;

public class NqueenPuzzleBoard {
	int numberOfQueens;
	boolean safePlaces[][];
	int queenPlacement[];
	public NqueenPuzzleBoard(int n){
		numberOfQueens = n;
		safePlaces = new boolean[n][n];
		for(int i=0; i<n; i++)
			Arrays.fill(safePlaces[i], Boolean.TRUE);
		queenPlacement = new int[n];
	}
	
}
